{
    "name": "palmtree/easy-collection",
    "description": "Easy collection library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andy Palmer",
            "email": "andy@andypalmer.me",
            "homepage": "https://andypalmer.me"
        }
    ],
    "require": {
        "php": "^7.4||^8.0"
    },
    "autoload": {
        "psr-4": {
            "Palmtree\\EasyCollection\\": "src"
        },
        "files": [
            "functions.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.7",
        "palmtree/php-cs-fixer-config": "^2.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Palmtree\\EasyCollection\\Test\\": "tests"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        }
    },
    "scripts": {
        "lint": "find -L src -type f -name '*.php' -print0 | xargs -0 -n 1 -P $(nproc) php -l",
        "test": "@php vendor/bin/phpunit -v",
        "fix": "@php vendor/bin/php-cs-fixer fix -v",
        "sniff": "@php vendor/bin/php-cs-fixer fix -v --dry-run --stop-on-violation --using-cache=no --diff",
        "psalm": "@php vendor/bin/psalm --no-cache",
        "ci-check": [
            "@lint",
            "@sniff",
            "@psalm",
            "@test"
        ]
    }
}
